<Window x:Class="QLCHBD_OOAD.Components.AddNewOrderItemImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLCHBD_OOAD.view.delivery.Add_Order"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStyle="None"
        ResizeMode="NoResize"
        BorderThickness="1"
        BorderBrush="Black"
        Title="AddNewOrderItemImageWindow" Height="500" Width="500">
    <Grid>
        <Grid.Resources>
            <Style x:Key="txtStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="Margin" Value="20 0 0 0"></Setter>
            </Style>
            <Style x:Key="tbStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="20"></Setter>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                <Setter Property="Margin" Value="5 15 10 10"></Setter>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Style="{StaticResource txtStyle}">ID Store:</TextBlock>
        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Style="{StaticResource txtStyle}">ID Provider:</TextBlock>
        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Style="{StaticResource txtStyle}">ID By Provider:</TextBlock>
        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Style="{StaticResource txtStyle}">Name:</TextBlock>
        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Style="{StaticResource txtStyle}">Price:</TextBlock>
        <TextBlock
            Grid.Row="5"
            Grid.Column="0"
            Style="{StaticResource txtStyle}">Amount:</TextBlock>


        <TextBox
            Grid.Row="0"
            Grid.Column="1"        
            FontSize="20"
            VerticalAlignment="Center"
            Text="{Binding tbIDStore}"></TextBox>
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            FontSize="20"
               VerticalAlignment="Center"
           
            Text="{Binding tbIDProvider}"></TextBox>
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
             FontSize="20"
             VerticalAlignment="Center"
            Text="{Binding tbIDByProvider}"></TextBox>
        <TextBox
            x:Name="tbName"
            FontSize="20"
            Grid.Row="3"
            Grid.Column="1"
           VerticalAlignment="Center"
           
            Text="{Binding tbName}"></TextBox>
        <TextBox
            x:Name="tbPrice"
            Grid.Row="4"
            FontSize="20"
            Grid.Column="1"
            VerticalAlignment="Center"
            Text="{Binding tbPrice}"></TextBox>
        <TextBox
           x:Name="tbAmount"
            Grid.Row="5"
            FontSize="20"
            Grid.Column="1"
              VerticalAlignment="Center"
            Text="{Binding tbAmount}"></TextBox>

        <Grid Grid.Row="6" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Width="150"
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0 0 10 0"
               
                Background="Gray"
                BorderThickness="0"
                FontSize="20"
                Padding="0"
                Command="{Binding CancelCommand}"
                Foreground="White">CANCEL</Button>
            <Button
                Grid.Column="1"
                Width="150"  
                Height="40"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0 0 10 0"
                Padding="0 0 0 0"
               
                Background="Green"                
                BorderThickness="0"
                FontSize="20"
                Command="{Binding ConfirmCommand}"
                Foreground="White">CONFIRM</Button>
        </Grid>

    </Grid>
</Window>

