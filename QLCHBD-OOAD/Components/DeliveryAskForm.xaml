<Window x:Class="QLCHBD_OOAD.Components.DeliveryAskForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLCHBD_OOAD.Components"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStyle="None"
        Topmost="True"
        ResizeMode="NoResize" 
        AllowsTransparency="True"
        Background="Transparent"
        
        Title="DeliveryAskForm" Height="313" Width="1028">
    <Border CornerRadius="36" Background="White" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid Background="Transparent">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.7*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0 15 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="7*"/>
                </Grid.ColumnDefinitions>
                <Image Source="/QLCHBD-OOAD;component/assets/img_confirm.png"
                       Width="130" 
                       Height="144"
                       Grid.Column="0"/>
                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                    <TextBlock Text="Do you want to save?"
                    FontSize="45"
                    Margin="0 20 0 0"
                    FontFamily="Roboto"
                    FontWeight="Bold"/>
                </StackPanel>
            </Grid>
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        FlowDirection="RightToLeft" 
                        Margin="0 0 10 0">

                <Button Width="210"
                        Height="66"
                        Command="{Binding ByHandCommand}"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="16"
                        Background="Green">
                    <TextBlock Text="BY HAND"
                               FontSize="40"
                               FontFamily="Roboto"
                               FontWeight="Medium"
                               Foreground="White"/>
                </Button>
                <Button Width="202"
                        Height="66"
                        Background="DarkOliveGreen"
                        Margin="10 0 10 0"
                        Command="{Binding ImportCommand}"
                         Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="16">
                    <TextBlock Text="IMPORT"
                               FontSize="40"
                               FontFamily="Roboto"
                               FontWeight="Medium"
                               Foreground="White"/>
                </Button>
                <Button Width="202"
                        Height="66"
                        Background="Gray"
                        Command="{Binding CancleCommand}"
                         Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        materialDesign:ButtonAssist.CornerRadius="16">
                    <TextBlock Text="CANCEL"
                               FontSize="40"
                               FontFamily="Roboto"
                               FontWeight="Medium"
                               Foreground="White"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
